<%= simple_form_for @job, remote:true do |f| %>
  <%= f.error_notification %>
  <%= link_to 'x', '#', id: 'close', class: 'btn btn-xs btn-danger', style: "float: right;" %>
  <div class="form-inputs">
    <%= f.input :job_name %>
    <%= f.input :job_link %>
    <%= f.input :company_name %>
    <%= f.input :job_description %>
  </div><hr>
  <div id="user_jobs">
    <%= f.simple_fields_for :user_jobs do |user_job| %>
      <%= render 'user_job_fields', :f => user_job %>
    <% end %> 
  <div class='links'>
    <%= link_to_add_association 'Add User', f, :user_jobs, class: 'btn btn-info btn-xs' ,partial: 'jobs/user_job_fields' %>
  </div>
    <hr>
  </div>

  <div class="form-actions">
    <%= f.button :submit, class: 'btn btn-primary btn-block' %>
  </div>
<% end %>

<script type="text/javascript">
  $("#close").click(function(){
    $("user_jobs").hide();
});
</script>
