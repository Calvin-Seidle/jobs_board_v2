<h1>Jobs (<%= @jobs.count %>)</h1><hr>

<%= link_to 'New Job', new_job_path, id: 'new_link', remote:true %><hr>
<div id='jobs'>
<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th>Job link</th>
      <th>Job name</th>
      <th>Company name</th>
      <th>Job description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @jobs.each do |job| %>
      <tr>
        <td><a href="<%= job.job_link %>" target="_blank" ><%= job.job_link %></a> </td>
        <td><%= job.job_name %></td>
        <td><%= job.company_name %></td>
        <td><%= job.job_description %></td>
        <td><%= link_to 'Show', job, class: 'btn btn-xs btn-info' %></td>
        <td><%= link_to 'Edit', edit_job_path(job), class: 'btn btn-xs btn-warning' %></td>
        <td><%= link_to 'Destroy', job, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-xs btn-danger' %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
<hr>

<div class="col-md-12 col-xs-12">
    <center>
        <%= will_paginate @jobs, renderer: BootstrapPagination::Rails %>
    </center>
</div>